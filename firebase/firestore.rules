rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(uid) {
      return isAuthenticated() && request.auth.uid == uid;
    }
    
    function isValidString(value, maxLength) {
      return value is string && value.size() <= maxLength;
    }
    
    function isValidNoteType(type) {
      return type in ['audio_recording', 'youtube_link', 'uploaded_audio', 'scanned_text'];
    }
    
    function isValidNoteStatus(status) {
      return status in ['processing', 'ready', 'failed'];
    }
    
    // Users collection
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId);
      allow update: if isOwner(userId) 
        && request.resource.data.keys().hasAny(['cityPlateCode', 'cityName', 'notificationPrefs', 'fcmToken', 'lastActiveAt'])
        && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['uid', 'createdAt']));
      allow delete: if false; // Users cannot delete their profile
    }
    
    // Notes collection
    match /notes/{noteId} {
      allow read: if isAuthenticated() && resource.data.uid == request.auth.uid;
      allow create: if isAuthenticated() 
        && request.resource.data.uid == request.auth.uid
        && isValidString(request.resource.data.title, 200)
        && isValidNoteType(request.resource.data.type);
      allow update: if isAuthenticated() 
        && resource.data.uid == request.auth.uid
        && request.resource.data.uid == request.auth.uid
        && (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['uid']));
      allow delete: if isAuthenticated() && resource.data.uid == request.auth.uid;
      
      // List query - must filter by uid
      allow list: if isAuthenticated() 
        && request.query.limit <= 50
        && resource.data.uid == request.auth.uid;
    }
    
    // Folders collection
    match /folders/{folderId} {
      allow read: if isAuthenticated() && resource.data.uid == request.auth.uid;
      allow create: if isAuthenticated() 
        && request.resource.data.uid == request.auth.uid
        && isValidString(request.resource.data.name, 100);
      allow update: if isAuthenticated() 
        && resource.data.uid == request.auth.uid
        && request.resource.data.uid == request.auth.uid;
      allow delete: if isAuthenticated() && resource.data.uid == request.auth.uid;
      
      allow list: if isAuthenticated() && resource.data.uid == request.auth.uid;
    }
    
    // Prayer times cache - read-only for authenticated users
    match /prayerTimes/{timesId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only Cloud Functions can write
    }
    
    // Daily content - read-only for authenticated users
    match /dailyContent/{contentId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admin/functions can write
    }
    
    // Bookmarks (Quran ayetleri iÃ§in)
    match /bookmarks/{bookmarkId} {
      allow read, write: if isAuthenticated() && resource.data.uid == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.uid == request.auth.uid;
    }
  }
}
